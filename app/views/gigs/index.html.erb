<p id="notice"><%= notice %></p>

<h1>Listing Gigs</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Details</th>
      <th>Pictures</th>
      <th>Paid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gigs.each do |gig| %>
      <tr>
        <td><%= gig.price %></td>
        <td><%= gig.details %></td>
        <td><%= gig.pictures %></td>
        <td><%= gig.paid %></td>
        <td><%= gig.user_id %></td>
        <td><%= link_to 'Show', gig %></td>
        <td><%= link_to 'Edit', edit_gig_path(gig) %></td>
        <td><%= link_to 'Destroy', gig, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

